<GridPane id="signUpBox" prefHeight="302.0" prefWidth="274.0" style="-fx-background-radius: 5; -fx-background-color: #FDFCDC;" stylesheets="@styles/welcome.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.SignUpController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="45.0" minWidth="45.0" prefWidth="45.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="45.0" minWidth="45.0" prefWidth="45.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="42.0" minHeight="33.0" prefHeight="33.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="220.0" minHeight="10.0" prefHeight="220.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="0.0" minHeight="42.0" prefHeight="42.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox spacing="19.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <JFXTextField fx:id="inputUsername" focusColor="#3fa7d6" labelFloat="true" promptText="Username" unFocusColor="#a1a1a1">
               <font>
                  <Font name="Noto Sans CJK TC DemiLight" size="14.0" />
               </font></JFXTextField>
            <JFXTextField fx:id="inputEmail" focusColor="#3fa7d6" labelFloat="true" promptText="E-mail" unFocusColor="#a1a1a1" />
            <JFXPasswordField fx:id="inputPassword" focusColor="#3fa7d6" labelFloat="true" promptText="Password" unFocusColor="#a1a1a1" />
            <JFXPasswordField fx:id="inputConfirmPassword" focusColor="#3fa7d6" labelFloat="true" promptText="Confirm your password" unFocusColor="#a1a1a1">
               <font>
                  <Font name="Lucida Grande" size="13.0" />
               </font></JFXPasswordField>
            <JFXButton fx:id="btnSignUp" maxWidth="1.7976931348623157E308" onAction="#handleSignUp" prefHeight="12.0" prefWidth="184.0" ripplerFill="#3fa7d6" style="-fx-background-color: #59CD90;" text="Sign Up" textFill="WHITE" />
         </children>
      </VBox>
       <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
           <children>
               <Label fx:id="btnGoBackToLogin" alignment="CENTER" contentDisplay="CENTER" layoutX="17.0" layoutY="4.0" onMouseClicked="#haveAccountClicked" text="Already have an account?" textFill="#686868" underline="true">
               <styleClass>
                  <String fx:value="hover-hand" />
                  <String fx:value="link-label" />
               </styleClass>
               </Label>
           </children>
       </AnchorPane>
   </children>
</GridPane>
